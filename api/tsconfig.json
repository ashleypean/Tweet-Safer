{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "baseUrl": "",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "*": [
        "node_modules/*"
        ]
      },
    }, 
  "include": [
    "**/*"
  ]
}